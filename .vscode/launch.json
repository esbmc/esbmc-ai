  "version": "0.2.0",
  "configurations": [
    {
      "name": "UserChat on Open File",
      "type": "debugpy",
      "request": "launch",
      "module": "esbmc_ai",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "args": [
        "userchat",
        "${file}"
      ]
    },
    {
      "name": "Fix Code on Open File",
      "type": "debugpy",
      "request": "launch",
      "module": "esbmc_ai",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "ESBMCAI_CONFIG_FILE": "${workspaceFolder}/config_dev.toml"
      },
      "args": [
        "-v",
        "-r",
        "fix-code",
        "${file}"
      ]
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Run tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "args": [
        "-v"
      ]
    },
    {
      "name": "Run coverage tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "args": [
        "-v",
        "--cov"
      ]
    }
  ]
}